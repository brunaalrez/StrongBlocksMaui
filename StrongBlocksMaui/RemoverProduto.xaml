<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="StrongBlocksMaui.RemoverProduto"
             Title="RemoverProduto">
    <ScrollView>
        <VerticalStackLayout>
            <Label Text="Nome do Produto"
            FontAttributes="Bold" />
            <Entry x:Name="EntryNome"
            Placeholder="Digite o nome do produto" />

            <Label Text="Digite a quantidade" />
            <Entry x:Name="EntryQuantidade"/>

            <Button Text="Remover Produto"
            BackgroundColor="Red"
            TextColor="White"
            Clicked="RemoveProduto_Clicked"/>
            
        </VerticalStackLayout>
    </ScrollView>
    
</ContentPage>