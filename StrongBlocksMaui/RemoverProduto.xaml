<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="StrongBlocksMaui.RemoverProduto"
             Title="Remover Produtos">
    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="15">
            <Label Text="Nome do Produto"
            FontAttributes="Bold" />
            <Entry x:Name="EntryNome"
                   Placeholder="Ex.: Bloco A"/>

            <Label Text="Digite a quantidade" />
            <Entry x:Name="EntryQuantidade"
                   Placeholder="Ex.: 10 "/>

            <Button Text="Remover Produto"
            BackgroundColor="Red"
            TextColor="White"
            Clicked="RemoveProduto_Clicked"/>
            
        </VerticalStackLayout>
    </ScrollView>
    
</ContentPage>