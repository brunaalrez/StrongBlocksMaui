<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="StrongBlocksMaui.RemoverInsumo"
             Title="Remover Insumo">

    <ScrollView>
    <VerticalStackLayout Padding="20" Spacing="15">

        <Label Text="Nome do Insumo"
               FontAttributes="Bold" />
        <Entry x:Name="EntryNome"
               Placeholder="Ex.: Areia" />

        <Label Text="Digite a quantidade" />
        <Entry x:Name="EntryQuantidade"
               Placeholder="Ex.: 10"/>

        <Button Text="Remover Insumo"
                BackgroundColor="Red"
                TextColor="White"
                Clicked="Remover_Clicked" />

    </VerticalStackLayout>
    </ScrollView>

</ContentPage>
