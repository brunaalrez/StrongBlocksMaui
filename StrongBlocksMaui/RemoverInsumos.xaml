<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="StrongBlocksMaui.RemoverInsumo"
             Title="Remover Insumo">

    <ScrollView>
        <VerticalStackLayout Padding="30,0" Spacing="25">

            <Label Text="Selecione o insumo para remover:" />
            <Picker x:Name="PickerInsumos" SelectedIndexChanged="PickerInsumos_SelectedIndexChanged" />

            <Label Text="Fornecedor do insumo:" />
            <Entry x:Name="EntryFornecedor" IsReadOnly="True"/>

            <Button BackgroundColor="Red" TextColor="White" Text="Remover" Clicked="Remover_Clicked"/>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
