<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="StrongBlocksMaui.CadastroInsumo"
             Title="Cadastro de Insumo">
    <ScrollView>

        <VerticalStackLayout Padding="30,0" Spacing="25">
            <Label Text="Digite o nome do insumo:" />
            <Entry x:Name="EntryNome"/>

            <Label Text="Digite a quantidade" />
            <Entry x:Name="EntryQuantidade"/>

            <Label Text="Digite o nome do fornecedor" />
            <Entry x:Name="EntryFornecedor"/>

            <Button BackgroundColor="Yellow" TextColor="Black"  Text="Salvar" Clicked="Salvar_Clicked"/>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>